<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/item_image_card_corner_radius"
    app:cardBackgroundColor="@color/grey_dark"
    >

    <ImageView
        android:id="@+id/album_image_container"
        android:layout_width="@dimen/album_image_size"
        android:layout_height="@dimen/album_image_size"
        android:scaleType="centerCrop"
        android:contentDescription="@string/album_image_content_desc"
        />

</androidx.cardview.widget.CardView>
